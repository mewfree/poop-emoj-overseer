bc = #fff
tbbg = #000

body
  margin 0
  font-family 'Helvetica'
  background-color bc
  color #444

.wrap
  background-color bc

.header
  padding 10px 10px
  color #fff
  font-size 20px
  text-align center
  background-color tbbg
  border-bottom 1px solid darken(tbbg, 30%)
  text-shadow 0px -1px 0px darken(tbbg, 30%)

.body
  padding-top 20px
  padding-bottom 20px
  padding-left 20%
  padding-right 20%

a
  color #000
  text-decoration none
  &:hover
    text-decoration underline

